{
	"name": "tempojc-portfolio",
	"version": "0.5.0",
	"description": "ü¶Å TempoJC portfolio",
	"private": false,
	"author": {
		"name": "Jose Luis Camargo",
		"email": "josel.cc.dam@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"nextjs",
		"tailwind",
		"typescript",
		"eslint",
		"prettier",
		"jest",
		"testing-library",
		"husky",
		"lint-staged",
		"stylelint",
		"framer-motion"
	],
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:css": "stylelint '**/**.css'",
		"lint:css:fix": "stylelint --fix '**/**.css'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:ci": "jest --ci",
		"test:coverage": "npm run test -- --coverage --silent",
		"format:prettier": "prettier --write '**/**.{js,ts,jsx,tsx,json,md,css}'",
		"format:eslint": "eslint --fix '**/**.{js,ts,jsx,tsx}'",
		"format": "npm run format:eslint && npm run format:prettier",
		"check:format": "prettier --check '**/**.{js,ts,jsx,tsx}'",
		"check:lint": "next lint",
		"check:types": "tsc --pretty --noEmit",
		"prepare": "husky install"
	},
	"dependencies": {
		"framer-motion": "^7.6.1",
		"next": "12.3.1",
		"next-themes": "^0.2.1",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@tailwindcss/typography": "^0.5.7",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/node": "18.11.0",
		"@types/react": "18.0.21",
		"@types/react-dom": "18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"autoprefixer": "^10.4.12",
		"eslint": "^8.25.0",
		"eslint-config-next": "12.3.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.10",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.1",
		"jest": "^29.2.1",
		"jest-environment-jsdom": "^29.2.1",
		"lint-staged": "^13.0.3",
		"postcss": "^8.4.18",
		"prettier": "^2.7.1",
		"stylelint": "^14.14.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^29.0.0",
		"tailwindcss": "^3.2.0",
		"typescript": "4.8.4"
	}
}
